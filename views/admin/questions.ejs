<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Manage Questions - Aptitude Quest</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <nav class="navbar">
            <div class="nav-container">
                <div class="logo">
                    <h1>ðŸŽ¯ Aptitude Quest</h1>
                </div>
                <div class="nav-buttons">
                    <a href="/admin/dashboard" class="btn btn-secondary">Dashboard</a>
                    <a href="/admin/logout" class="btn btn-secondary">Logout</a>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <div class="dashboard">
            <div class="welcome-card">
                <h2 style="color: #667eea; margin-bottom: 1rem;">Manage Questions</h2>
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
                    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                        <a href="/admin/questions?section=quantitative" class="btn <%= currentSection === 'quantitative' ? 'btn-primary' : 'btn-secondary' %>">Quantitative</a>
                        <a href="/admin/questions?section=logical" class="btn <%= currentSection === 'logical' ? 'btn-primary' : 'btn-secondary' %>">Logical</a>
                        <a href="/admin/questions?section=verbal" class="btn <%= currentSection === 'verbal' ? 'btn-primary' : 'btn-secondary' %>">Verbal</a>
                    </div>
                    <a href="/admin/questions/add" class="btn btn-primary">Add New Question</a>
                </div>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Section</th>
                            <th>Question</th>
                            <th>Option A</th>
                            <th>Option B</th>
                            <th>Option C</th>
                            <th>Option D</th>
                            <th>Correct</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% questions.forEach(function(question) { %>
                            <tr>
                                <td><%= question.id %></td>
                                <td>
                                    <span style="background: #667eea; color: white; padding: 0.3rem 0.8rem; border-radius: 15px; font-size: 0.9rem;">
                                        <%= question.section.charAt(0).toUpperCase() + question.section.slice(1) %>
                                    </span>
                                </td>
                                <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    <%= question.question %>
                                </td>
                                <td><%= question.option_a %></td>
                                <td><%= question.option_b %></td>
                                <td><%= question.option_c %></td>
                                <td><%= question.option_d %></td>
                                <td>
                                    <span style="background: #28a745; color: white; padding: 0.3rem 0.8rem; border-radius: 15px; font-size: 0.9rem;">
                                        <%= question.correct_option.toUpperCase() %>
                                    </span>
                                </td>
                                <td>
                                    <div style="display: flex; gap: 0.5rem;">
                                        <a href="/admin/questions/edit/<%= question.id %>" class="btn btn-secondary" style="padding: 0.5rem 1rem; font-size: 0.9rem;">Edit</a>
                                        <a href="/admin/questions/delete/<%= question.id %>" class="btn" style="background: #dc3545; color: white; padding: 0.5rem 1rem; font-size: 0.9rem;" onclick="return confirm('Are you sure you want to delete this question?')">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                
                <% if (questions.length === 0) { %>
                    <div style="text-align: center; padding: 3rem; color: #666;">
                        <p style="font-size: 1.2rem; margin-bottom: 1rem;">No questions found in this section.</p>
                        <a href="/admin/questions/add" class="btn btn-primary">Add First Question</a>
                    </div>
                <% } %>
            </div>

            <div class="welcome-card" style="margin-top: 2rem;">
                <h3 style="color: #667eea; margin-bottom: 1rem;">Section Statistics</h3>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                    <div style="text-align: center; padding: 1rem; background: #f8f9fa; border-radius: 10px;">
                        <h4 style="color: #667eea; margin-bottom: 0.5rem;">ðŸ“Š Quantitative</h4>
                        <p style="color: #666; font-size: 1.2rem; font-weight: 600;">
                            <%= currentSection === 'quantitative' ? questions.length : '?' %> / 20 questions
                        </p>
                    </div>
                    <div style="text-align: center; padding: 1rem; background: #f8f9fa; border-radius: 10px;">
                        <h4 style="color: #667eea; margin-bottom: 0.5rem;">ðŸ§© Logical</h4>
                        <p style="color: #666; font-size: 1.2rem; font-weight: 600;">
                            <%= currentSection === 'logical' ? questions.length : '?' %> / 20 questions
                        </p>
                    </div>
                    <div style="text-align: center; padding: 1rem; background: #f8f9fa; border-radius: 10px;">
                        <h4 style="color: #667eea; margin-bottom: 0.5rem;">ðŸ“š Verbal</h4>
                        <p style="color: #666; font-size: 1.2rem; font-weight: 600;">
                            <%= currentSection === 'verbal' ? questions.length : '?' %> / 20 questions
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
